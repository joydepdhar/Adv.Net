<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ZeroHungerPro</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <nav class="navbar navbar-light" style="background-color: #e3f2fd; padding:10px">
            <a class="navbar-brand" href="/Home/Index">ZeroHungerPro</a>
            <ul class="nav justify-content-end">
                <li class="nav-item">
                    <a class="btn btn-success btn-lg rounded-pill" href="/Home/SignIn">Sign In</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-success btn-lg rounded-pill" href="/Home/SignUp">Sign Up</a>
                </li>
            </ul>
        </nav>
    </div>

    <div class="container body-content">
        @RenderBody()

        <footer style="text-align:center">
            <p>&copy; @DateTime.Now.Year - JoydepDhar</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

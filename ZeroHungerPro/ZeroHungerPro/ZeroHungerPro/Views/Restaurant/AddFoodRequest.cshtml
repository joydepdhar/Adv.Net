
@{
    ViewBag.Title = "AddFoodRequest";
    Layout = "~/Views/Shared/_RestaurantLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddEmployeeLayout</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>
        body {
            background-color: powderblue;
        }

        .container {
            padding-top: 100px;
        }

        .form-signin {
            margin: 0 auto;
            max-width: 400px;
            background-color: azure;
            padding: 20px;
            border-radius: 10px;
        }

            .form-signin h2 {
                text-align: center;
            }
    </style>
</head>
<body>
    <div class="front">
        <div class="container">
            <form class="form-signin" method="post">
                <h2>FoodDonationRequest</h2>
                <input type="text" name="RestaurantID" value="@Model.ID" hidden class="form-control" />
                <input type="text" name="EmployeeID" hidden class="form-control" value="" />
                <label>FoodName</label>
                <input type="text" name="FoodName" class="form-control" />
                <label>Quantity(Per Person)</label>
                <input type="text" name="Quantity" class="form-control" placeholder="Enter the food amount (Per Person)" />
                <input type="text" name="Status" hidden class="form-control" value="Pending" />
                <label>PreserveTime(Hr)</label>
                <input type="text" name="PreservationTime" class="form-control" placeholder="Enter the Preserve Time in Hr" />
                <br />
                <input type="submit" class="btn btn-success btn-block" name="Submit" value="Submit" />
            </form>
        </div>
    </div>
</body>
</html>


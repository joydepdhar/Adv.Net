@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_signInLayout</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>
        .BackColor {
            background-color: powderblue;
        }
        .form-signin {
            margin: 0 auto;
            max-width: 400px;
            background-color: azure;
            padding: 20px;
            border-radius: 10px;
        }
        .form-signin h2 {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="front-signin">
        <div class="container">
            <form class="form-signin" method="post">
                <h2>SignUp</h2>
                <label>Name</label>
                <input type="text" name="Name" class="form-control" />
                <span style="color: red;">@Html.ValidationMessage("Name")</span><br />
                <label>Emai:</label>
                <input type="text" name="Email" class="form-control" placeholder="Enter Your Email" />
                <span style="color: red;">@Html.ValidationMessage("Email")</span><br />
                <label>Password:</label>
                <input type="password" name="Password" class="form-control" placeholder="Enter Your Password" />
                <span style="color: red;">@Html.ValidationMessage("Password")</span><br />
                <label>Address:</label>
                <input type="text" name="Address" class="form-control" />
                <span style="color: red;">@Html.ValidationMessage("Address")</span><br />
                <label>Contact Number:</label>
                <input type="text" name="Phone" class=" form-control" />
                <span style="color: red;">@Html.ValidationMessage("Phone")</span><br />
                <br />
                <input type="submit" class="btn btn-success btn-block" name="Submit" value="Submit" />
            </form>
        </div>
    </div>
</body>
</html>

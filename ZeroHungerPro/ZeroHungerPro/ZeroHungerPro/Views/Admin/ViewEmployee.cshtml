
@{
    ViewBag.Title = "ViewEmployee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <title>View Employee</title>
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3 class="text-center text-success mt-4 mb-4 font-weight-bold">Employee List</h3>
                <table class="table table-bordered table-hover custom-table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Employee ID</th>
                            <th>Employee Name</th>
                            <th>Employee Email</th>
                            <th>Contact Number</th>
                            <th>Address</th>
                            <th>Action Button</th>
                        </tr>
                        @foreach (var c in Model)
                        {
                            <tr>
                                <td>@c.ID</td>
                                <td>@c.Name</td>
                                <td>@c.Email</td>
                                <td>@c.Phone</td>
                                <td>@c.Address</td>
                                <td class="border border-slate-600 py-3"><a href="/Admin/EmployeeDelete/@c.ID" class="btn btn-danger"> DELETE</a></td>
                            </tr>
                        }

                </table>
            </div>
        </div>
    </div>
</body>
</html>





@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<h2>Cart</h2>
<table class="table table-bordered">
    <tr>

        <th>Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Action</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr text-align: center;>
            <td>@p.Product.Name</td>
            <td>@p.Quantity</td>
            <td>@p.Price</td>
            <td> <a href="/customer/deletecart/@p.Id" class="btn btn-danger">Remove from Cart</a></td>
        </tr>
    }
</table>

<a href="/customer/placeorder" class="btn btn-danger">Place Order</a>
<a href="/customer/clearcart" class="btn btn-danger">Clear Cart</a>
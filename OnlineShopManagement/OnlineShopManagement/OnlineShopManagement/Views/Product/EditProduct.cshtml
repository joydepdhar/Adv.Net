
@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>EditProduct</h2>

<form action="" method="post">
    <input type="hidden" name="ID" class="form-control" value="@Model.ID" />
    <input type="text" name="Name" class="form-control" value="@Model.Name" />
    <input type="text" name="Price" class="form-control" value="@Model.Price" />

    <select class="form-control" name="Catagory_ID">
        <option selected value="@Model.Catagory.ID">@Model.Catagory.Name</option>
        @foreach (var c in ViewBag.Catagorys)
        {
            <option value="@c.ID">@c.Name</option>
        }
    </select>
    <input type="number" name="Quantity" class="form-control" value="@Model.Quantity" />

    <input type="submit" value="Update" class="btn btn-warning" />
</form>


@{
    ViewBag.Title = "SignUp";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_signInLayout</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>
        .BackColor {
            background-color: powderblue;
        }

        .container {
            padding-top: 50px;
        }


        .form-signin {
            margin: 0 auto;
            max-width: 400px;
            background-color: azure;
            padding: 20px;
            border-radius: 10px;
        }

        .form-signin h2 {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="form-signin">
        <div class="container">
            <h2>SignUp</h2>
            <form action="" method="post">
                <label>Name:</label>
                <input type="text" name="Name" class="form-control" placeholder=" Enter your Name" />
                <label>Email:</label>
                <input type="text" name="Email" class="form-control" placeholder=" Enter your Email" />
                <label>Password:</label>
                <input type="password" name="Password" class="form-control" placeholder="Enter your Password" />
                <input type="hidden" name="Role" class="form-control" value="customer" />
                <label>Address:</label>
                <input type="text" name="Address" class="form-control" placeholder="Enter your Address" />
                <label>Phone:</label>
                <input type="text" name="Phone" class="form-control" placeholder=" Enter your Phone" /> <hr />
                <input type="submit" name="submit" class="btn btn-success" value="SignUp" />
            </form>
        </div>
    </div>
</body>
</html>



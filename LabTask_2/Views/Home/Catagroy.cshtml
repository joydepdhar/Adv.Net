
@{
    ViewBag.Title = "Catagroy";
}

<div class="flex  items-start">
    <div class="w-[50%]">
        <h3 class="text-center text-xl text-green-500 m-5 font-bold">Department List</h3>

        <table class="table-auto w-full border-collapse border border-slate-500">
            <thead>
                <tr>
                    <th class="border border-slate-600 py-4">Catagory Id</th>
                    <th class="border border-slate-600 py-4">Catagory Name</th>
                    <th class="border border-slate-600 py-4">EDIT</th>
                    <th class="border border-slate-600 py-4">DELETE</th>
                </tr>
            </thead>
            @foreach (var s in Model)
            {
                <tbody>
                    <tr class="text-center">
                        <td class="border border-slate-600 py-3">@s.ID</td>
                        <td class="border border-slate-600 py-3">@s.Name</td>
                        <td class="border border-slate-600 py-3"><a href="/Home/Edit/@s.ID"> EDIT</a></td>
                        <td class="border border-slate-600 py-3"><a href="/Home/Delete/@s.ID"> DELETE</a></td>

                    </tr>
                </tbody>
            }
        </table>
    </div>

    <div class="w-[50%] flex justify-center flex-col">
        <h3 class="text-center text-xl text-green-500 m-5 font-bold">Add Department</h3>

        <form class="flex flex-col gap-5 justify-center items-center" method="post" action="">
            <input class="w-[70%] py-4 border-[2px] rounded text-center" type="text" name="Name" placeholder="Enter Department Name" />
            <input class="bg-green-400 px-10 rounded py-3 cursor-pointer" type="submit" value="Add" />
        </form>
    </div>
</div>